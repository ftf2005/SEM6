#include "stdio.h"
int main() 
{
    int n, i,count=0;
    printf("Enter the number: ");
    scanf("%d", &n);

    if (n <= 1) 
	{
        printf("Not a prime number\n");
    } 
	else 
	{
        for (i = 2; i <= n; i++) 
		{
            if (n % i == 0)
			{
                count++;
                
            }
        }
        if(count==1)
        {
        	printf("its a prime number\n");
		}
		else
		{
			printf("It's not a prime number\n");
		}
        
    }

    return 0;
}
